<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@drawable/background_nav_bar" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"

        android:layout_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/line_img_home"
            android:visibility="invisible"

            android:layout_marginEnd="1dp" />



        <ImageView
        android:id="@+id/img_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"



        android:layout_weight="1"

        android:src="@mipmap/home" />


    </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"


            android:layout_marginBottom="0dp"

            android:layout_weight="1">


            <ImageView
                android:id="@+id/img_event"
                android:layout_width="match_parent"

                android:layout_height="match_parent"



                android:layout_weight="1"
                android:src="@mipmap/calendar" />
            <View
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:id="@+id/line_img_event"

                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="1dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginTop="5dp"

            android:layout_marginBottom="0dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:id="@+id/line_img_training"
                android:visibility="invisible"

                android:layout_marginTop="1dp"

                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="1dp" />
            <ImageView
                android:id="@+id/img_training"
                android:layout_width="match_parent"


                android:layout_height="match_parent"



                android:layout_weight="1"
                android:src="@mipmap/shop" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginTop="5dp"

            android:layout_marginBottom="0dp"
            android:layout_weight="1">

            <View
                android:visibility="invisible"

                android:layout_width="match_parent"
                android:id="@+id/line_img_location"
                android:layout_height="1dp"
                android:background="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="1dp"/>
            <ImageView
                android:id="@+id/img_location"
                android:layout_width="match_parent"

                android:layout_height="match_parent"



                android:layout_weight="1"
                android:baselineAligned="false"
                android:src="@mipmap/support" />


        </androidx.constraintlayout.widget.ConstraintLayout>







    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>