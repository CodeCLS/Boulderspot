<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_log_in_holding123"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/holding_title_and_img_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/uclimb_log_in_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textSize="36sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_logo_round_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher_round"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_holding_user_edit_pwd_edit_1234"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText

                android:id="@+id/edit_email_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:hint="Email" />

            <EditText
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:inputType="textPassword"


                android:hint="Password"
                android:id="@+id/edit_pwd_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_holding_button_and_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_log_in_log_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/public_button_grey"
                android:elevation="0dp"
                android:text="Log In"
                android:textSize="20sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/sign_up_txt_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_google_signupwith_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/google_logo_log_in"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/googleg_standard_color_18" />

            <TextView
                android:id="@+id/signupwithlogin"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Sign up with"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_weight="1"
                />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>