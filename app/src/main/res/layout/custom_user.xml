<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_custom_profile_top"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/transparent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"

        android:background="@drawable/round_event_date">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_pro_custom_home_img"
            android:layout_width="104dp"
            android:layout_height="103dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="-116dp"
            android:src="@mipmap/selfie"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/settings_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/rel_small_include_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_txt_include"
            app:layout_constraintTop_toTopOf="@+id/name_txt_include"
            app:srcCompat="@mipmap/settings" />

        <TextView
            android:id="@+id/name_txt_include"
            android:layout_width="223dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"

            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/settings_img"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/rel_small_include_profile"
            app:layout_constraintEnd_toStartOf="@+id/settings_img"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_pro_custom_home_img" />

        <View
            android:id="@+id/line_5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:background="#707070"
            app:layout_constraintBottom_toTopOf="@+id/rel_small_include_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_img"></View>



        <LinearLayout
            android:id="@+id/rel_small_include_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/friends_img_include"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="70dp"


                app:srcCompat="@mipmap/friendship">


               </ImageView>

            <ImageView
                android:id="@+id/target_img_include"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"

                app:srcCompat="@mipmap/target" />

            <ImageView
                android:id="@+id/followers_img_include"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"

                app:srcCompat="@mipmap/user" />

            <ImageView
                android:id="@+id/notification_img_include"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"


                app:srcCompat="@mipmap/notification" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>