<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_custom_home"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="10dp"
    android:background="@drawable/round_event_date">

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#707070"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_round_videoframe"
        app:layout_constraintVertical_bias="0.0" />
    <FrameLayout
        android:id="@+id/frame_round_videoframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/round_videoview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <VideoView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/video_custom_home"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="160dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_2">


        <TextView
            android:id="@+id/grade_titel"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"


            android:text="Grade:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/grade_txt"
            android:layout_width="80dp"
            android:layout_height="48dp"

            android:layout_gravity="right"
            android:layout_marginTop="10dp"

            android:layout_marginRight="10dp"

            android:gravity="center_vertical"
            android:text="Grade:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/maker_txt"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_gravity="right"

            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"

            android:text="Grade:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/maker_titel"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"


            android:gravity="center"
            android:text="Maker:"
            android:textSize="12sp" />

        <View
            android:id="@+id/line_3"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:background="#707070" />
    </FrameLayout>



    <View
        android:id="@+id/shadow_of_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/shadow_button"
        app:layout_constraintBottom_toTopOf="@+id/line_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/frame_round_videoframe"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_round_border"
        app:layout_constraintBottom_toTopOf="@+id/line_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/frame_round_videoframe"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/like_view_img_custom"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@mipmap/heartempty" />

    <TextView
        android:id="@+id/like_txt"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_marginStart="5dp"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/like_view_img_custom"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout4"
        app:layout_constraintTop_toBottomOf="@+id/line_2">

        <TextView
            android:id="@+id/info_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Info:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textSize="12sp" />
    </FrameLayout>

    <View
        android:id="@+id/darker"
        android:layout_width="373dp"
        android:layout_height="76dp"
        android:alpha="0.2"
        android:background="@drawable/darker_gradient"
        app:layout_constraintBottom_toBottomOf="@+id/img_pro_custom_home_img"
        app:layout_constraintEnd_toEndOf="@+id/frame_round_videoframe"
        app:layout_constraintStart_toStartOf="@+id/frame_round_videoframe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/img_pro_custom_home_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/selfie"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintBottom_toTopOf="@+id/frame_round_videoframe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/username_txt"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Caleb Seeling"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/darker"
        app:layout_constraintEnd_toEndOf="@+id/frame_round_videoframe"
        app:layout_constraintStart_toEndOf="@+id/img_pro_custom_home_img"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>