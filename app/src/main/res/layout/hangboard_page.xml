<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1.8"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4">

                <TextView
                    android:id="@+id/hang_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"
                    android:autoSizeTextType="uniform"

                    android:gravity="center"
                    android:text="Hang Time"
                    android:textSize="30sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/pause_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Pause Time"
                    android:textSize="30sp"
                    app:autoSizeTextType="uniform" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom">

                <EditText
                    android:id="@+id/hang_time_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"
                    android:autoSizeTextType="uniform"

                    android:gravity="center"
                    android:hint="Seconds"
                    android:inputType="number"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pause_time_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:hint="Seconds"
                    android:inputType="number"
                    android:textSize="20sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1.9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4">

                <TextView
                    android:id="@+id/rest_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"

                    android:autoSizeTextType="uniform"


                    android:gravity="center"
                    android:text="Rest Time "
                    android:textSize="30sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/number_sets_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"


                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Sets"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom">

                <EditText
                    android:id="@+id/rest_time_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"
                    android:autoSizeTextType="uniform"

                    android:gravity="center"
                    android:hint="Seconds"
                    android:inputType="number"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/number_sets_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"

                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:hint="Sets"
                    android:inputType="number"
                    android:textSize="20sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4">

                <TextView
                    android:id="@+id/number_rounds_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1.4"


                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Rounds"
                    android:textSize="30sp"
                    app:autoSizeTextType="uniform" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom">

                <EditText
                    android:id="@+id/number_rounds_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"

                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:hint="Rounds"
                    android:inputType="number"
                    android:textSize="20sp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">
        <Button
            android:id="@+id/btn_start_train_hangboard"
            android:elevation="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Start"
            android:layout_weight="1"
            android:background="@color/quantum_amberA100"
            />

        <Button
            android:id="@+id/btn_sound_hang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:elevation="10dp"

            android:background="@color/quantum_amber900"
            android:text="Sound" />

</LinearLayout>

</LinearLayout>