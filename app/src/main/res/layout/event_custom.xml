<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/round_event_custom">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="1.0">


        <View
            android:id="@+id/view_for_info"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/round_info"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="199dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/view_for_info"
            android:layout_alignEnd="@+id/view_for_info"
            android:layout_alignBottom="@+id/view_for_info"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="12dp"
            android:text="Lorem Ipsum dolar sit amet valvo dilar Lorem Ipsum dolar sit amet valvo dilar "
            android:textSize="18sp" />

        <View
            android:id="@+id/shadow_button_more"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/more_info_txt_button"
            android:layout_alignTop="@+id/more_info_txt_button"
            android:layout_alignEnd="@+id/more_info_txt_button"
            android:layout_alignBottom="@+id/more_info_txt_button"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/shadow_button" />

        <View
            android:id="@+id/round_border_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/info_txt"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/button_round_border" />

        <TextView
            android:id="@+id/more_info_txt_button"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/round_border_button"
            android:layout_alignTop="@+id/round_border_button"
            android:layout_alignEnd="@+id/round_border_button"
            android:layout_alignBottom="@+id/round_border_button"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="More" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView

            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"



            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="100dp"
            android:background="@mipmap/example_img"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent" />


        <RelativeLayout
            android:id="@+id/date_frame"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="242dp"
            android:layout_marginBottom="-16dp"
            android:background="@drawable/round_event_date"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignTop="@+id/text_safe_the_date"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="115dp"
                android:background="#707070" />

            <TextView
                android:id="@+id/text_safe_the_date"
                android:layout_width="101dp"
                android:layout_height="21dp"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"


                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="116dp"
                android:text="Safe the date"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_date_event"
                android:layout_width="136dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-34dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="26dp"
                android:gravity="center"
                android:text="12.11.2019"
                android:textAlignment="center"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>