<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@drawable/public_background_layer_white_round"
    android:id="@+id/custom_home_posts"
    android:elevation="10dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp">


    <LinearLayout
        android:id="@+id/abaf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/abc"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2">


            <TextView
                android:id="@+id/txt_username_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="120dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Caleb Seeling"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraing_num1231q321"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_weight="0.7"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_view_custom_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"

                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="#fff">

                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/video_custom_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/abcd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tools_btn_layout_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_home_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/like_passive" />

                <ImageView
                    android:id="@+id/img_home_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/share_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_inside_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:scrollbars = "vertical"
                    android:id="@+id/txt_info_custom_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:padding="10dp"
                    android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet." />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_home_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="0.8"
                    android:visibility="gone" />
                <EditText
                    android:id="@+id/edit_comment_home_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="comment"
                    android:layout_weight="0.9"
                    android:visibility="gone" />
                <Button
                    android:text="Submit"
                    android:textColor="@color/colorPrimaryDark"



                    android:id="@+id/btn_comment_home_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_custom_home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/icon_user"
        app:layout_constraintStart_toEndOf="@+id/abaf"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/abaf"
        tools:ignore="NotSibling" />

    <ProgressBar
        android:id="@+id/progress_custom_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="160dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

