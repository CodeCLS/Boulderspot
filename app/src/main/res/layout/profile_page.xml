<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:layout_weight="1"
              android:orientation="horizontal">


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:layout_weight="1"
                  android:orientation="vertical">


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:layout_weight="1"
                      android:orientation="vertical">

                      <de.hdodenhof.circleimageview.CircleImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"

                          android:layout_margin="10dp"
                           />
                  </LinearLayout>


                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent" android:layout_weight="1.5"
                          android:orientation="vertical">

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_margin="10dp"
                              android:autoSizeTextType="uniform"
                              android:text="Sarah Schubert" />

                      </LinearLayout>





              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:layout_weight="1"
                  android:layout_marginEnd="5dp"
                  android:layout_marginTop="10dp"
                  android:orientation="vertical">


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      >


                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent" android:layout_weight="1" android:src="@drawable/avatarb"/>

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent" android:layout_weight="1" android:src="@drawable/avatarb"/>

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent" android:layout_weight="1" android:src="@drawable/avatarb"/>




                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:orientation="horizontal"
                      >


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:text="50 Uploads"
                          android:textAlignment="center" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent" android:layout_weight="1" android:text="22 Follower"
                          android:textAlignment="center"/>


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:text="22 Friends"
                          android:textAlignment="center" />





                  </LinearLayout>





              </LinearLayout>



          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:layout_weight="1">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="2dp"
                  android:autoSizeTextType="uniform"
                  android:text="Hey ich bin Sarah, ich klettere seit zwei Jahren und klettere V5. " />


          </LinearLayout>


          <com.flarebit.flarebarlib.FlareBar
              android:id="@+id/flare_bar_profile"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1.4" />



      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1">



      </LinearLayout>






  </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>





