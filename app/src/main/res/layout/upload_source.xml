<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:elevation="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Upload"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="30sp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_login_button"
                    android:text="Load image/video"
                    android:layout_margin="10dp"
                    android:layout_weight="1" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="20dp">
                <Button
                    android:id="@+id/upload_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Location"
                    android:layout_weight="4"
                    />
                <RadioButton
                    android:id="@+id/upload_log_radio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Log this climb into statistics"
                    android:layout_weight="4" />


            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <EditText
                android:id="@+id/upload_info_edit"
                android:hint="Info"
                android:elevation="10dp"
                android:singleLine="false"
                android:maxLines="20"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/spinner_grade_upload"
                    android:layout_width="match_parent"
                    android:elevation="10dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_impression_grade_upload"
                    android:elevation="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/spinner_tries_upload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"

                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner_route_type_upload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"

                    android:layout_weight="1" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/round_login_button"
            android:layout_margin="10dp" />


    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>
