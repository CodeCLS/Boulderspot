<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_training_item_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="20sp"
    android:orientation="horizontal">

    <include layout="@layout/public_upload_button_ui" android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/rec_item_btn_view"
        android:layout_margin="15dp"
        android:layout_width="match_parent" />

    <include layout="@layout/public_training_button_ui" android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/rec_item_btn_view_training"
        android:layout_margin="15dp"
        android:layout_width="match_parent" />








</LinearLayout>