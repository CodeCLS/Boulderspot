<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/standart_profile_page_layout_b"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="10dp"
    android:layout_margin="10dp"

    android:background="@drawable/all_round">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">

       <Button

           android:id="@+id/btn_change_data"
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:layout_margin="10dp"

           android:background="@drawable/round_login_button"
           android:text="Change Data" />


       <EditText
           android:id="@+id/Name_edit_profile"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"

           android:layout_weight="1" />
       <EditText
           android:id="@+id/Email_edit_profile"
           android:inputType="textEmailAddress"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"

           android:layout_weight="1" />
       <EditText
           android:id="@+id/profile_edit_info"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"
           android:layout_weight="1" />
       <EditText
           android:id="@+id/age_edit_profile"
           android:inputType="number"


           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"

           android:layout_weight="1" />
       <AutoCompleteTextView
           android:id="@+id/country_edit_profile"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"

           android:layout_weight="1" />
       <EditText
           android:id="@+id/height_edit_profile"
           android:inputType="number"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"
           android:layout_weight="1" />

       <LinearLayout
           android:id="@+id/linear_rec_holder_profile"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:visibility="gone"
           android:layout_weight="0.7" />

       <AutoCompleteTextView
           android:id="@+id/competition_input_profile"


           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"

           android:layout_weight="2" />

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rec_competition_profile_edit"

           android:layout_width="match_parent"
           android:visibility="gone"
           android:layout_height="match_parent"
           android:layout_weight="1" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>