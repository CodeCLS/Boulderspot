<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_training"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_item_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/view_for_traiing_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_item_training"
        app:layout_constraintTop_toTopOf="@+id/img_item_training"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_item_list_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training_txt"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_for_traiing_item"
        app:layout_constraintEnd_toStartOf="@+id/img_item_training"
        app:layout_constraintStart_toEndOf="@+id/img_item_training"
        app:layout_constraintTop_toTopOf="@+id/view_for_traiing_item" />

</androidx.constraintlayout.widget.ConstraintLayout>